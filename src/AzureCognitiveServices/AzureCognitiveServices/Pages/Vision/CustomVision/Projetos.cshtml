@page
@model AzureCognitiveServices.ProjetosModel
@{
    ViewData["Title"] = "Projetos";
}

<h1>Projetos</h1>

@if (Model.PodeAdicionarNovosProjetos)
{
    <br />
    <br />

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalNovoProjeto">
        Novo projeto
    </button>

    <div class="modal fade" id="modalNovoProjeto" tabindex="-1" role="dialog" aria-labelledby="modalNovoProjetoLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalNovoProjetoLabel">Novo projeto</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="nome">* Nome do projeto:</label>
                            <input type="text" class="form-control" name="nome" id="nome" required />
                        </div>
                        <div class="form-group">
                            <label for="descricao">Descrição do projeto:</label>
                            <textarea class="form-control" name="descricao" id="descricao" rows="2"></textarea>
                        </div>
                        <input type="hidden" value="projeto" name="tipo" id="tipo" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Adicionar projeto</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@if (Model.Projetos.Any())
{
    <br />
    <br />
    <br />

    <fieldset>
        <legend>Projetos já existentes</legend>
        @foreach (var projeto in Model.Projetos)
        {
            <div class="card" style="width: 25rem;">
                <div class="card-body">
                    <h5 class="card-title">@projeto.Name</h5>
                    <p class="card-text">Tags: @Model.ListarTags(projeto).Aggregate(string.Empty, (atual, tag) => $"{atual}{tag.Name}; ")</p>
                    <button type="button" class="card-link" data-toggle="modal" data-target="#modalTagsDoProjeto-@projeto.Id">
                        Adicionar tag
                    </button>
                    <a href="#" class="card-link">Treinar</a>
                    <a href="#" class="card-link">Predizer</a>
                </div>
            </div>

            <div class="modal fade" id="modalTagsDoProjeto-@projeto.Id" tabindex="-1" role="dialog" aria-labelledby="modalTagsDoProjeto-@projeto.Id" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalTagsDoProjeto-@projeto.Id-Label">Tag do projeto @projeto.Name</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form method="post">
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="nome">* Tag:</label>
                                    <input type="text" class="form-control" name="nome" id="nome" required aria-describedby="ajudaParaTag" />
                                    <small id="ajudaParaTag" class="text-muted">
                                        Tags representam o que você <strong>VAI</strong> adicionar ao projeto. Adicione uma.
                                    </small>
                                </div>
                                <div class="form-group">
                                    <label for="descricao">Descrição da tag:</label>
                                    <textarea class="form-control" name="descricao" id="descricao" rows="2"></textarea>
                                </div>
                                <input type="hidden" value="tag" name="tipo" id="tipo" />
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Adicionar tag</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </fieldset>
}