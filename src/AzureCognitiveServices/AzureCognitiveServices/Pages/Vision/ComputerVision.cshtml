@page
@model AzureCognitiveServices.ComputerVisionModel
@{
    ViewData["Title"] = "Visão Computacional";
}

<h1>Visão Computacional</h1>

<br />
<h2>Descrever a imagem</h2>
<div class="row">
    <div class="col-6">
        <fieldset>
            <legend>Testar com uma URL</legend>
            <form method="post" id="legenda">
                <div class="form-group">
                    <label for="url">URL de uma imagem:</label>
                    <input type="url" class="form-control" name="url" id="url" />
                </div>
                <button type="submit" class="btn btn-primary">Detectar faces</button>
            </form>
        </fieldset>
    </div>

    <div class="col-6">
        <fieldset>
            <legend>Testar com um arquivo</legend>
            <form method="post" enctype="multipart/form-data" id="legenda">
                <div class="form-group">
                    <label for="arquivo">Arquivo de uma imagem:</label>
                    <input type="file" class="form-control-file" asp-for="Arquivo" id="arquivo" />
                </div>
                <button type="submit" class="btn btn-primary">Detectar faces</button>
            </form>
        </fieldset>
    </div>
</div>

